{
    "project": "hlx-email",
    "plugins": [
        {
            "id": "copyHtml",
            "title": "Copy E-Mail",
            "environments": [
                "dev",
                "preview"
            ],
            "event": "copyHtml"
        },
        {
            "id": "downloadHtmlMac",
            "title": "Download E-Mail for MAC",
            "environments": [
                "dev",
                "preview"
            ],
            "event": "downloadHtml"
        },
        {
            "id": "downloadHtmlWin",
            "title": "Download E-Mail for Windows",
            "environments": [
                "dev",
                "preview"
            ],
            "event": "downloadHtmlWindows"
        },
        {
            "id": "library",
            "title": "Library",
            "environments": ["edit","dev"],
            "url": "/tools/sidekick/library.html",
            "includePaths": ["**.docx**"]
        },
        {
            "id": "ajo-integration",
            "title": "AJO",
            "environments": [
                "dev"
            ],
            "event": "login",
            "url": "/tools/ajo-integration/ajo-integration.html",
            "passConfig": true,
            "passReferrer": true,
            "isPalette": true,
            "paletteRect": "top: 54px; left: 5px; bottom: 5px; width: 450px; height: 430px; border-radius: var(--hlx-sk-button-border-radius); overflow: hidden; resize: both;"
        }
    ]
}
